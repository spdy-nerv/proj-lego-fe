<view class="page">
    <view><image class="goodsImg" src='../../images/ceshi.png'/></view>
    <view class="goodsName">{{orderItems.productName}}</view>
    <view class="page__bd">
        <view class="weui-form-preview">
            <view class="weui-form-preview__bd pd20 ">
                <view class="weui-form-preview__item mg15">
                    <view class="weui-form-preview__label">订单号</view>
                    <view class="weui-form-preview__value">{{orderId}}</view>
                </view>
                <view class="weui-form-preview__item mg15">
                    <view class="weui-form-preview__label">下单时间</view>
                    <view class="weui-form-preview__value">{{orderTime}}</view>
                </view>
                <view class="weui-form-preview__item mg15">
                    <view class="weui-form-preview__label">支付状态</view>
                    <view class="weui-form-preview__value">{{orderStatus}}</view>
                </view>
                <view class="weui-form-preview__item mg15" bindtap='expressStatus'>
                        <view class="weui-form-preview__label">货单号：{{deliveryNo}}</view>
                        <view class="weui-form-preview__value"><image class="arrow" src='../../images/arrow.png'/></view>
                </view>
                <view class="weui-form-preview__item mg15" bindtap="customerService">
                        <view class="weui-form-preview__label">联系客服</view>
                        <view class="weui-form-preview__value"><image class="arrow" src='../../images/arrow.png'/></view>
                </view>
            </view>
        </view>
    </view> 
</view>