<!--pages/home/home.wxml-->
<view class="page">
  <view class="banner-container">
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular='{{circular}}'>
      <block wx:for="{{pictureUrl}}" wx:key="unique">
        <swiper-item>
          <!-- item.navigateUrl -->
          <navigator url='{{item.navigateUrl}}'> 
              <!-- <navigator url='../productDetail/productDetail?productId=22'>  -->
            <image src="{{item.pictureUrl}}" mode='aspectFill' />
          </navigator>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view>
    <image class="homeTopLogo" src='../../images/homeTopLogo.png' />
  </view>

<view class="content">
    <view class="reserve">
        <navigator url='../productList/productList'>
          <image src='{{reserveImg}}' wx:if='{{reserveImg}}'/>
        </navigator>
      </view>
      
      <view class="gift" bindtap='openProgram'>
        <image src='{{giftImg}}' wx:if='{{giftImg}}'/>
      </view>
</view>
  <view class="footer">
      <navigator url='../storeList/storeList'>
        <view class="bottomLeft">寻找乐高</view>
      </navigator>

      <navigator url='../userCenter/userCenter'>
        <view class="bottomRight">个人中心</view>
      </navigator>
  </view>
</view>