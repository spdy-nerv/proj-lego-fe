/* pages/my/my.wxss */
.map-wrap {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.map_box{
  position:absolute;
  top:60rpx;
  bottom: 150rpx;
  left: 0px;
  right: 0px;
}
.text_box{
  position:absolute;
  height: 150rpx;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.text_box .text{
  font-size: 30rpx;
  height: 45rpx;
  line-height: 45rpx;
  color: #333333;
}
.text_box2{
  margin: 0 30rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #c3c3c3;
  font-size: 26rpx;
}
.text_box2
.text_item{display:inline-block;line-height: 8px;}

.detail_button {
  position:absolute;
  bottom: 50rpx;
  right: 30rpx;
  padding: 0 10rpx;
  color: #fff;
  background: #930000;
  width:100rpx;
  text-align:center;
  border-radius:20rpx;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;

}
.flex-style{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-bottom: 1rpx solid #e5e5e5;
}
.flex-item{
  height: 60rpx; 
  line-height: 60rpx;
  text-align: center;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  font-size: 26rpx;
}
.flex-item.active{
  color:#0091ff;
}
.displanone{
  display: none;
}
.no{
	width:100%;
	height:100%;
	line-height: 150rpx;
	text-align: center;
	font-size: 50rpx;
}