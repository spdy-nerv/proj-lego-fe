    height: 100%;
    padding:30rpx;
    box-sizing: border-box;
}
.goodsImg{
    width: 100%;
    height: 440rpx;
}
.icon{
    width: 80rpx;
    height: 95rpx;
    position: absolute;
    top:0rpx;
    right:0rpx;

}
.goodsNum{
    font-size: 28rpx;
    
}
.productItem{
    width: 100%;
    height: 300rpx;
    display: flex;
    box-sizing: border-box;
    margin:30rpx 0;

}
.productLeft{
    position: relative;
}
.productItem .productLeftImg{
    width: 345rpx;
    height: 300rpx;
}
