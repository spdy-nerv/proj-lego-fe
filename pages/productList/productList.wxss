.page{
    width: 100%;
    height: 100%;
    padding:0 18rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
}
 .page .headerImg{
    height: 440rpx;
    padding:0 18rpx;
}
.goodsImg{
    width: 95%;
    height: 440rpx;
    position: fixed;
    z-index: 99;
    left: 18rpx;
}

.block{
    width: 100%;
    height: 470rpx;
    position:fixed;
    background-color: #fff;
    z-index: 98;
    left: 17rpx;
}
.icon{
    width: 80rpx;
    height: 95rpx;
    position: absolute;
    top:0rpx;
    left:0rpx;

}
.goodsNum{
    font-size: 28rpx;
    
}
.productItem{
    width: 100%;
    height: 310rpx;
    display: flex;
    box-sizing: border-box;
    margin:30rpx 0;

}
.productLeft{
    position: relative;
}
.productItem .productLeftImg{
    width: 345rpx;
    height: 310rpx;
}
.productItem .productRight{
    background-color: #f3f3f3;
    box-sizing: border-box;
    flex: 1;
}
.productItem .title{
    font-size: 28rpx;
    margin-top:20rpx;
}
.productItem .startBuy{
    width: 222rpx;
    background-color: #DB2919;
    color: #fff;
    font-size: 26rpx;
    text-align: center;
    line-height: 47rpx;
    margin-top:30rpx;
}
.fs30{
    font-size: 23rpx;
}
.mg27{
    margin-left:30rpx;
    margin-top:9rpx;
}
.fontColor{
    color:#999;
}
.bgcolor{
    background-color: #aaa;
    width: 222rpx;
    color: #fff;
    font-size: 26rpx;
    text-align: center;
    line-height: 47rpx;
    margin-top:17rpx;
}
.error{
    width: 100%;
    margin-top:30rpx;
    font-size: 36rpx;
    color: #ccc;
    text-align: center;
}