/* 自定义弹窗 */
.show-btn {
	margin-top: 100rpx;
	color: #22cc22;
  }
  
  .modal-mask {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background: #000;
	opacity: 0.5;
	overflow: hidden;
	z-index: 9000;
	color: #fff;
  }
  
  .modal-dialog {
	width: 540rpx;
	overflow: hidden;
	position: fixed;
	top: 35%;
	left: 0;
	z-index: 9999;
	background: #f9f9f9;
	margin: -180rpx 105rpx;
	border-radius: 18rpx;
  }
  
  .modal-title {
	padding-top: 20rpx;
	font-size: 36rpx;
	color: #030303;
	text-align: center;
  }
  
  .modal-content {
	padding: 10rpx 32rpx;
	display: flex;
	flex-direction: column;
	font-size: 30rpx;
  }
  .modal-footer {
	display: flex;
	flex-direction: row;
	height: 86rpx;
	border-top: 1px solid #dedede;
	font-size: 34rpx;
	line-height: 86rpx;
	margin-top: 20rpx;
  }
  .modal-footer .button{
	border:none;
	font-size: 33rpx;
  }
  /* 去除button的默认边框 */
  .modal-footer .button::after {  
	border: none;
}
  .btn-cancel {
	width: 50%;
	color: #666;
	text-align: center;
	border-right: 1px solid #dedede;
	font-size: 33rpx;
  }
  
  .btn-confirm {
	width: 50%;
	color: #ec5300;
	text-align: center;
	font-size: 33rpx;
  }