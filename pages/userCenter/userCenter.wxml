<!--pages/userCenter/userCenter.wxml-->
<view class="page">
    <view class='header'>
      <view><image src='{{personCenterBg}}'/></view>  
      <view><image class='headImg' src='{{avatarUrl}}' wx:if='{{avatarUrl}}'/></view>
      <text class="name">{{nickName}}</text>
    </view>
    <!-- 我的优惠券 -->
    <view class="centerContent">
    <view class="myCoupon"  bindtap='toMyCoupon'>
        <view class="couponTitle">
            <view class="couponLeft">
                <image src='../../images/couponIcon.png'/>
                <text>我的优惠券</text>
            </view>
            <image class="couponIcon youhui" src='../../images/arrow.png'/>
          </view>
    </view>
    <!-- 我的礼品卡 -->
    <view class="myCoupon"  catchtap='toMyGiftCard'>
      <view class="couponTitle">
          <view class="couponLeft">
              <image src='../../images/giftCard.png'/>
              <text>我的礼品卡</text>
          </view>
          <image class="couponIcon youhui" src='../../images/arrow.png'/>
        </view>
  </view>
    <!-- 我的订单 -->
    <view class="myOrder" bindtap='toMyOrder'>
          <view class="myOrderLeft">
          <image class="myOrderImg" src='../../images/myOrder.png'/>
          <text>商品订单</text>
        </view>
          <image class='myOrderArrow' src='../../images/arrow.png'/>
    </view>
   <!-- 我的购买记录 -->
    <view class="coupon" bindtap='toMyBuyRecord'>
      <view class="couponTitle">
        <view class="couponLeft">
            <image src='../../images/buyHistoryIcon.png'/>
            <text>礼品卡购买记录</text>
        </view>
        <image class="couponIcon" src='../../images/arrow.png'/>
      </view>
    </view>
  </view>
</view>
