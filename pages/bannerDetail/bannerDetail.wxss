/* pages/productDetail/productDetail.wxss */
.page{
    box-sizing: border-box;
	position: relative;
	padding:0 10rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-content: center;
}
  .reserve{
      display: flex;
      flex-direction: row;
      justify-content: center;
  }
.reserve image{
      width: 700rpx;
      height: 350rpx;
      margin-top: 25rpx;
     
  }
  .flex-row{
  	display: flex;
      flex-direction: row;
      justify-content: space-around;
	  padding-top:30rpx;
	  margin-top:35rpx;
  }
  .flex-view-item{
  		width:33%;
  		height:180rpx;
  		margin-left:1%;
  		margin-right:1%;
  }
  .flex-view-item image{
  	width:100%;
  	height:180rpx;
  }
  .content{
  	width:95%;
  	height:330rpx;
  	background:#F3F3F3; 
	  margin-top:70rpx;	
	  font-size: 33rpx;
	  align-self: center;
	  padding:20rpx;
	  box-sizing: border-box;
	  color: #434343;
	  
  }
  .content_name{
  	padding-top:60rpx;
  	padding-left:150rpx;
  	font-size:30rpx;
  	height:50rpx;
  	line-height:50rpx;
  }
  .content_num{
  	padding-top:10rpx;
  	padding-left:150rpx;
  	font-size:30rpx;
  	height:50rpx;
  	line-height:50rpx;
  }
  .content_price{
  	padding-top:10rpx;
  	padding-left:150rpx;
  	font-size:30rpx;
  	height:50rpx;
  	line-height:50rpx;
  }
  .Orders{
  		width:40%;
  		height:60rpx;
  		line-height:60rpx;
  		margin-top:100rpx;
  		color:#fff;
  		background:#E50011;
  		font-size:35rpx;
  }