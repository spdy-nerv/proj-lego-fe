page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-navbar{
    background-color: #fff;
}
.weui-tab__content{
    padding-top: 10px;
    text-align: center;
}

.buyHistory-Item{
    width: 100%;
    height: 130rpx;
    border-bottom: 1rpx solid #F3F3F3;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    box-sizing: border-box;
}
.buyHistory-Item .buyHistoryImg{
    width: 124rpx;
    height: 80rpx;
    margin-left:20rpx;
}
.buyHistoryText{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items:flex-start;
    margin-top:15rpx;
   
}
.buyHistory-Item .buyHistoryType{
    font-size: 26rpx;
}
.buyHistory-Item .receiveInfo{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 450rpx;
    height: 31rpx;
}
.buyHistory-Item .receivepeople{
    color: #949494;
    font-size: 26rpx;
}
.buyHistory-Item .buyHistoryArrow{
    margin-right: 35rpx;
}
.price{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}
.rmb{
    width: 25rpx;
    height: 25rpx;
}
.rmbText{
    color: #D81E06;
    font-size: 31rpx;
}
.arrow{
    width: 15rpx;
    height: 26rpx;
}
 .weui-tab__panel .order{
    width: 100%;
    margin-top:30rpx;
    font-size: 36rpx;
    color: #ccc;
    text-align: center;
}